<Window x:Class="HorseRaces.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HorseRaces"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <PathGeometry x:Key="path">
            <PathFigure StartPoint="10,0">
                <LineSegment Point="700,0"/>
            </PathFigure>
        </PathGeometry>
    </Window.Resources>
    <Canvas x:Name="canvas">
        <Canvas.Background>
            <ImageBrush ImageSource="Resources\running-track.jpg"/>
        </Canvas.Background>
        <Line X1="700" Y1="25" X2="700" Y2="295" Stroke="Red" StrokeThickness="6"/>
        <ContentControl x:Name="horse" Width="70"/>
        <Label x:Name="label" Content="Label" Canvas.Left="361" Canvas.Top="296"/>
        <Button x:Name="start_button" Content="Start!" Canvas.Left="208" Canvas.Top="320" Width="74" Click="start_button_Click"/>
    </Canvas>
</Window>
