<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MouseMove="Canvas_MouseMove"
        x:Name="win">
    <Grid >
        <Canvas x:Name="canvas">
            <Button x:Name="but_yes" Content="Да" HorizontalAlignment="Left" Margin="230,210" VerticalAlignment="Top" Width="99" Height="36" Click="But_yes_Click"/>
            <Button x:Name="but_no" Content="Нет" MouseEnter="No_MouseEnter" HorizontalAlignment="Left" Margin="410,210" VerticalAlignment="Top" Width="99" Height="36"/>
            <Label x:Name="label" Content="Вам нравится программирование?" HorizontalAlignment="Left" Margin="254,125,0,0" VerticalAlignment="Top" FontSize="15"/>
            <Label x:Name="label1" Content="" Canvas.Left="254" Canvas.Top="351"/>
        </Canvas>
    </Grid>
</Window>
