<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MouseMove="Canvas_MouseMove"
        x:Name="win" SizeChanged="Win_SizeChanged">
    <Grid >
        <Canvas x:Name="canvas" Background="ForestGreen" MouseMove="No_MouseMove">
            <Button x:Name="but_yes" Content="Да" Canvas.Left="230" Canvas.Top="210" Width="100" Height="36" Click="But_yes_Click"/>
            <Button x:Name="but_no" Content="Нет" Canvas.Left="390" Canvas.Top="180" Width="100" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible"/>
                <Label x:Name="label" Content="Вам нравится легкая атлетика?" Canvas.Left="254" Canvas.Top="125" FontSize="15"/>
        </Canvas>
    </Grid>
</Window>
